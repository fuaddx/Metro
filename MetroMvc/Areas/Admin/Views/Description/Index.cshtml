@model IEnumerable<DescriptionListItemVm>
@{
	ViewData["Title"] = "Index";
}
<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Tables</h1>

	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<a asp-action="Create" class="btn btn-success">Create</a>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" width="100%">
					<thead>
						<tr>
							<th>Description</th>
							<th>CreatedTime</th>
							<th>UpdatedTime</th>
							<th class="text-center" colspan="2">Action</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Descriptionn</td>
								<td>@item.CreatedTime</td>
								<td>@(item.UpdatedTime != null ? item.UpdatedTime.ToString() : "No Update")</td>

								<td class="text-center">
									<a asp-action="Update" class="btn btn-outline-info" asp-route-id="@item.Id">Update</a>
								</td>
								<td class="text-center">
									<a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>
<!-- /.container-fluid -->
