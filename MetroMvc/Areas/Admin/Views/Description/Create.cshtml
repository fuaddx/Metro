@model DescriptionCreateVm
@{
	ViewData["Title"] = "Create";
}
<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Tables</h1>

	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<form asp-action="Create" method="post">

					<div class="form-group">
						<label asp-for="Descriptionn"></label>
						<input asp-for="Descriptionn" class="form-control">
						<span asp-validation-for="Descriptionn" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="BlogId"></label>
						<input asp-for="BlogId" class="form-control">
						<span asp-validation-for="BlogId" class="text-danger"></span>
					</div>
					<button class="btn btn-success">Create</button>
					<a asp-action="Cancel" class="btn btn-danger">Cancel</a>
				</form>
			</div>
		</div>
	</div>

</div>